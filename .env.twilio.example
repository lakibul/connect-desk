# ============================================
# TWILIO WHATSAPP CONFIGURATION
# ============================================
# Add these to your .env file

# Twilio Account SID (from https://console.twilio.com)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Twilio Auth Token (from https://console.twilio.com)
TWILIO_AUTH_TOKEN=your_auth_token_here

# Twilio WhatsApp Sender Number
# Sandbox: +14155238886
# Production: Your approved WhatsApp number
TWILIO_WHATSAPP_FROM=+14155238886

# Admin phone number to receive visitor messages
# Format: +[country code][number] (e.g., +8801604509006)
TWILIO_TARGET_PHONE_NUMBER=+8801604509006

# ============================================
# OPTIONAL: Keep old Meta WhatsApp config for reference
# ============================================
# WHATSAPP_ACCESS_TOKEN=
# WHATSAPP_PHONE_NUMBER_ID=
# WHATSAPP_WEBHOOK_SECRET=
# WHATSAPP_WEBHOOK_URL=
# WHATSAPP_TARGET_PHONE_NUMBER=
